@page
@model WebApp.Pages.Games.Setup

@{
    
}

<style>
    
       label {
           display:block;
           padding:20px;
           cursor: pointer;
       }
       
</style>


<div class="col-6">
        
    <h1>Board for @Model.Player.Name</h1>

    <form method="post">
        
        <div class="row">
            <div class="col">
                Test checkbox: <input class="form-check-input" name="TestCheckbox" id="xx" type="checkbox" value="true" checked="checked">
            </div>
        </div>
        
        @* <input asp-for="TestCheckbox"> *@
        @foreach (var row in Model.Board.Rows!)
        {
            <div class="row">
                @foreach (var coord in row.Coordinates)
                {
                    <label><input class="form-check-input" name="Ships" id="xx" type="checkbox" value="@coord.X-@coord.Y" checked="@coord.BoardSquareState.IsShip"></label>
                }
            </div>
        }

        <div class="form-group">
            <input asp-for="@Model.Player.Id" />
        </div>

        <div class="form-group">
            <input type="submit" value="Setup" class="btn btn-primary"/>
        </div>
        
    </form>

</div>