@page
@model WebApp.Pages.Games.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label asp-for="PlayerA.Name" class="control-label">Player A (starts the game)</label>
                <input asp-for="PlayerA.Name" class="form-control" value="Player A @Guid.NewGuid()" />
                <span asp-validation-for="PlayerA.Name" class="text-danger"></span>
                
                <label asp-for="PlayerB.Name" class="control-label">Player A</label>
                <input asp-for="PlayerB.Name" class="form-control" value="Player B @Guid.NewGuid()" />
                <span asp-validation-for="PlayerB.Name" class="text-danger"></span>                
                
                <label asp-for="Game.BoardSize" class="control-label"></label>
                <input asp-for="Game.BoardSize" class="form-control" value="5" />
                <span asp-validation-for="Game.BoardSize" class="text-danger"></span>
                
                <label asp-for="Game.Comment" class="control-label"></label>
                <input asp-for="Game.Comment" class="form-control" value="@Guid.NewGuid()" />
                <span asp-validation-for="Game.Comment" class="text-danger"></span>
                
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
